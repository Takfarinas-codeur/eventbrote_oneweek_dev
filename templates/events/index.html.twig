{% extends 'layouts/base.html.twig'%}

{% block title %} Discover all events | Eventbrote{% endblock %}

 {% block body %}
 
        <h1 class="text-center h4 mt-5">{{events|length}}.Events</h1>

        <p><a href="{{ path ('events.create') }}">Add New Event</a></p>
        <div class="list-group list-group-flush">
          {% for event in events %}
            <a href="{{ path('events.show' , {'id' :event.id }) }}"
             class="list-group-item list-group-item-action">
               <img src="{{asset('build/images/' ~ event.imageFileName) }}" alt="{{event.name}}">  
               
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"> {{event.name}}</h5>
                    <p>{{format_price(event)}}</p>
                </div>
                <p class="mb-1"> {{event.description|u.truncate(35, '...', false) }}.</p>
                <small class="text-muted" >  On {{event.startsAt|datetime}} in  {{event.location}} .</small>
            </a>
            {% endfor %}
        </div>

      
 
 {% endblock %}


